@model CRUD_AspNet.Models.Product

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Excluir Produto</title>

    <!-- Importando o CSS do Bootstrap -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body style="margin-top: 4rem;">
    <div style="width: 30%;" class="container mt-4">
        <h1>Tem certeza que deseja excluir o produto?</h1>

        <div style="margin: 1rem 0;">
            <strong>Nome:</strong> @Model.Name <br />
            <strong>Pre√ßo:</strong> @Model.Price <br />
        </div>

        <form method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

    <!-- Incluindo o Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
